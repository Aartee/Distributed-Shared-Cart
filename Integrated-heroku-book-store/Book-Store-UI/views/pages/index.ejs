<!DOCTYPE html>
<html>
<head>
  <% include ../partials/header.ejs %>
</head>

<body>
  <div class = "container">
  <% include ../partials/nav.ejs %>

<div class="row">
<% for(var i=0; i < products.length; i++) { %>
      <div class="col-sm-4">
          <div class="thumbnail">
              <img src=<%= products[i].Image_URL %> alt="..." class="img-responsive" >
              <div class="caption">
                <h3><%= products[i].Title %></h3>
                <p class="description"><Strong>Author: </Strong><%= products[i].Author %></p>
                <div class="clearfix">
                  <div class="price pull-left" ><Strong>Price: </Strong>$<%= products[i].Price %></div>
                  <a href="/add-to-cart/<%= products[i]._id %>" class="btn btn-primary pull-right" role="button">Add to Shopping cart</a>
                </div>
              </div>
          </div>
        </div>  
<% } %>
</div>
</div>

</body>
</html>
