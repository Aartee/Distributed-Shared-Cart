<!DOCTYPE html>
<html>
<head>
  <% include ../partials/header.ejs %>
</head>
<body>
<!--{{# if cartItems }} -->
	<div class="row">
		<% for(var i=0; i < cartItems.length; i++) { 
        %>
		<div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
			<ul class="list-group">

					<li class="list-group-item">
						<img src=<%= cartItems[i].imageUrl %> alt="..." class="img-responsive" >
						<span class="badge"><%= cartItems[i].quantity %></span>
						<strong><%= cartItems[i].title %></strong>
						<span class="label label-success"><%= cartItems[i].price %></span>
						<div class="btn-group">
							<button class="btn btn-primary btn-xs dropdown-toggle" type="button" data-toggle="dropdown">Action<span class="caret"></span></button>
							<ul class="dropdown-menu">
								<li><a href="/reduce/{{this.item._id}}">Reduce by 1</a></li>
								<li><a href="/remove/{{this.item._id}}">Remove All</a></li>
							</ul>
						</div>
					</li>
			</ul>
		</div>
    <% } %>
	</div>

	<div class="row">
		<div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
			<strong>Total: {{ totalPrice }}</strong>
		</div>
	</div>
	<hr>
	<div class="row">
		<div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
			<a href="/checkout" type="button" class="btn btn-success">Checkout</a>
		</div>
	</div>
{{ else }}
	<div class="row">
		<div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
			<h2>No Items in Cart</h2>
		</div>
	</div>
{{/if}}
</body>
</html>